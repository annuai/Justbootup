------------------------------------------------------------------------------------- */
div.clean-horizontal { /* The main container */	
	position:relative;
	clear:both;
	width:100%; /* Set the full width */
}

/* Directional Buttons (horizontal)
------------------------------------------------------------------------------------- */
div.clean-horizontal > div.st_tabs a.st_prev, 
